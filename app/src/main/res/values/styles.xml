<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:typeface">sans</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="ActivityThemeWithActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:typeface">sans</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="ActivityDialogThemeLight" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:typeface">sans</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="android:typeface">sans</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ImageDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@drawable/frame_black_green_transparent</item>
        <!--<item name="android:background">@color/colorRed</item>-->
        <item name="android:windowBackground">@color/colorHalfTransparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:typeface">sans</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="StartTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="FirstLoginBlackTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="FirstLoginEditTextNormalTheme">
        <item name="android:layout_column">0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">100dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHighlight">#30000000</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:background">@drawable/edittext_green_pink_frame_selector</item>
    </style>

    <style name="FirstLoginTextViewNormalTheme">
        <item name="android:layout_column">0</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="custom_title_background">
        <item name="android:background">#2c78d7</item>
    </style>

    <style name="basicText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="courseTableText">
        <item name="android:textColor">#4b3b85</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="statusListItemText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="errorReportItemText">
        <item name="android:textColor">#b8a5a5</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!--<style name="AppTheme.Base" parent="Theme.AppCompat">-->
    <!--<item name="android:windowActionBar">false</item>-->
    <!--<item name="android:windowNoTitle">true</item>-->
    <!--</style>-->
</resources>
