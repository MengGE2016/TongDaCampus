<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/news_drawer_layout_drawer_lv_jieci_tv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/frame_black_green_transparent"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:text="1-3节"
        android:textColor="#f0f"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/news_drawer_layout_drawer_lv_kcmc_tv"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/frame_black_green_transparent"
        android:gravity="center"
        android:maxLines="1"
        android:padding="5dp"
        android:text="Android开发"
        android:textColor="#ff0"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/news_drawer_layout_drawer_lv_jiaoshi_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/frame_black_green_transparent"
        android:maxLines="1"
        android:padding="5dp"
        android:text="主1123"
        android:textColor="#0ff"
        android:textSize="15sp" />

</LinearLayout>