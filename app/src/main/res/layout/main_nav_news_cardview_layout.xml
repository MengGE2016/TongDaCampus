<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:padding="2dp"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp">


        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/main_nav_recv_news_title_tv"
                android:text="News Title Here"
                android:textColor="#000"
                android:textSize="15sp"
                android:lines="2"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--<TextView-->
            <!--android:id="@+id/main_nav_recv_news_link_tv"-->
            <!--android:text="Links Here"-->
            <!--android:textSize="8sp"-->
            <!--android:layout_margin="5dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/main_nav_recv_news_time_tv"
                android:textSize="8sp"
                android:text="Time Here"
                android:layout_margin="5dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/main_nav_load_content_prob"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/main_nav_recv_news_content_tv"
                android:textSize="12sp"
                android:autoLink="web"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

</android.support.v7.widget.CardView>