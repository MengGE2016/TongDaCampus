<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="?attr/colorPrimary"
    android:layout_height="180dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:id="@+id/main_nav_header_iv"
        android:src="@mipmap/ic_tdc_new"
        android:layout_centerInParent="true"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/main_nav_header_class_tv"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:text="xxx"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/main_nav_header_name_tv"
        android:layout_above="@id/main_nav_header_class_tv"
        android:layout_width="wrap_content"
        android:text="xxx"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/main_nav_header_num_tv"
        android:layout_above="@id/main_nav_header_name_tv"
        android:layout_width="wrap_content"
        android:text="xxx"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:layout_height="wrap_content" />

</RelativeLayout>